<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/button_rect_list_normal"
    android:id="@+id/noise_layout"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.energyfuture.symphony.m3.ui.MyEditText
        android:id="@+id/noise_distance"
        android:layout_width="0dp"
        android:layout_weight="0.7"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:numeric="decimal"
        android:lines="1"
        android:imeOptions="actionNext"
        android:maxLength="7"
        android:textSize="16sp"
        android:textColor="#000000"
        android:hint="请输入"
        android:background="@null"
        android:textColorHint="#DDDDDC"
        android:paddingBottom="5dp"/>
    <TextView
        android:id="@+id/noise_text"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:textColor="#0288D1"
        android:textSize="16sp"
        android:layout_gravity="center_vertical"
        android:text="(米)点击录入噪声测试值"/>
</LinearLayout>