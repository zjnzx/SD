<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/list_background">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="待下载巡检项目"
        android:textSize="25dp"
        android:textColor="#000000"/>

    <View
        android:id="@+id/view"
        android:layout_below="@id/text"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:background="#000000"
        android:layout_marginTop="2dp"/>

    <FrameLayout
        android:id="@+id/project_list"
        android:layout_below="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <TextView
            android:id="@+id/none_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:textColor="#000000"
            android:textSize="23dp"
            android:text="11111"/>

        <ListView
            android:id="@+id/list"
            android:divider="#00000000"
            android:dividerHeight="10dp"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </FrameLayout>

    <RelativeLayout
        android:layout_below="@id/project_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:gravity="center">
        <Button
            android:id="@+id/cancel"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="取消"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:background="@drawable/affirm_button_sel"/>

        <Button
            android:id="@+id/selectall"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="全选"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:layout_toRightOf="@id/cancel"
            android:layout_marginLeft="30dp"
            android:background="@drawable/affirm_button_sel"/>
        <Button
            android:id="@+id/download"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="下载"
            android:enabled="false"
            android:textSize="18sp"
            android:layout_toRightOf="@id/selectall"
            android:layout_marginLeft="30dp"
            android:textColor="#ffffff"
            android:background="@drawable/project_button_gray"/>

        </RelativeLayout>

</RelativeLayout>
