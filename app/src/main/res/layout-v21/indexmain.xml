<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerIndex"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyActivity">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_index"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:minHeight="?attr/actionBarSize"
            android:paddingTop="@dimen/tool_bar_top_padding"
            android:transitionName="actionBar" />

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="840dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/id_layout"
                    android:layout_width="match_parent"
                    android:layout_height="410dp"
                    android:background="@drawable/bg"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.energyfuture.symphony.m3.ui.RoundImageView
                        android:id="@+id/user_icon"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:src="@drawable/people_50" />

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/user_icon"
                        android:layout_alignRight="@+id/user_icon"
                        android:layout_below="@+id/user_icon"
                        android:layout_marginTop="20dp"
                        android:gravity="center_horizontal"
                        android:text="张晋华"
                        android:textColor="#ffffff"
                        android:textSize="35dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/user_icon"
                        android:layout_alignRight="@+id/user_icon"
                        android:layout_below="@id/user_name"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        android:text="操作员"
                        android:textColor="#cccccc"
                        android:textSize="25dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/index_task"
                            android:layout_width="wrap_content"
                            android:layout_height="210dp"
                            android:layout_weight="1"
                            android:background="@drawable/click_selector"
                            android:clickable="true"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_assignment_turned_in_grey600_48dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:textStyle="bold"
                                android:text="项目"
                                android:textColor="#54C639" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="210dp"
                            android:layout_weight="1"
                            android:background="#F1F5F8"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_textsms_grey600_48dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:text="消息"
                                android:textColor="#C5C5C5" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/file_pdf"
                            android:layout_width="wrap_content"
                            android:layout_height="210dp"
                            android:layout_weight="1"
                            android:background="#EAEFF2"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_tab_grey600_48dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:textStyle="bold"
                                android:text="文件"
                                android:textColor="#E6B509" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/index_report"
                            android:layout_width="wrap_content"
                            android:layout_height="210dp"
                            android:layout_weight="1"
                            android:background="@drawable/click_selector2"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_assignment_grey600_48dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:text="报告"
                                android:textColor="#C5C5C5" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="210dp"
                            android:layout_weight="1"
                            android:background="#EAEFF2"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_room_grey600_48dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:text="导航"
                                android:textColor="#C5C5C5" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/index_calc"
                            android:layout_width="wrap_content"
                            android:layout_height="210dp"
                            android:layout_weight="1"
                            android:background="#F1F5F8"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/calc_192" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:textStyle="bold"
                                android:text="计算器"
                                android:textColor="#3C98DF" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/drawer_index_list"
        android:layout_width="@dimen/drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#333E44"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingTop="@dimen/tool_bar_top_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:gravity="center"
            android:orientation="vertical">
            <!--<LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">-->
            <com.energyfuture.symphony.m3.ui.RoundImageView
                android:id="@+id/user_menu_icon"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/people_50" />
            <!--<ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:src="@drawable/ic_keyboard_arrow_right_grey600_36dp"/>-->
            <!--</LinearLayout>-->
            <TextView
                android:id="@+id/user_menu_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/user_icon"
                android:layout_alignRight="@+id/user_icon"
                android:layout_below="@+id/user_icon"
                android:layout_marginTop="25dp"
                android:gravity="center_horizontal"
                android:text="潘刚"
                android:textColor="#ffffff"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#4B5B63"
                android:clickable="false" />
            <!--设置 id= setting-->
            <com.energyfuture.symphony.m3.ripple.RippleView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                ripple:rv_type="rectangle">

                <LinearLayout
                    android:id="@+id/setting"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:src="@drawable/ic_settings_grey600_36dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginLeft="30dp"
                        android:gravity="center_vertical"
                        android:text="设置"
                        android:textColor="#C3C3C3"
                        android:textSize="15sp" />
                </LinearLayout>
            </com.energyfuture.symphony.m3.ripple.RippleView>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#4B5B63"
                android:clickable="false" />

            <!--反馈 id= feedback-->
            <com.energyfuture.symphony.m3.ripple.RippleView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                ripple:rv_type="rectangle">

                <LinearLayout
                    android:id="@+id/feedback"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:src="@drawable/ic_comment_grey600_36dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginLeft="30dp"
                        android:gravity="center_vertical"
                        android:text="反馈"
                        android:textColor="#C3C3C3"
                        android:textSize="15sp" />
                </LinearLayout>
            </com.energyfuture.symphony.m3.ripple.RippleView>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#4B5B63"
                android:clickable="false" />

            <!--版本更新-->
            <com.energyfuture.symphony.m3.ripple.RippleView
                android:id="@+id/upvs"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                ripple:rv_type="rectangle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:src="@drawable/versionupdate_96" />

                    <TextView
                        android:id="@+id/versiontext"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginLeft="30dp"
                        android:gravity="center_vertical"
                        android:text="版本更新"
                        android:textColor="#C3C3C3"
                        android:textSize="15sp" />
                </LinearLayout>
            </com.energyfuture.symphony.m3.ripple.RippleView>


            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#4B5B63"
                android:clickable="false" />

            <!--关于 id= about-->
            <com.energyfuture.symphony.m3.ripple.RippleView
                android:id="@+id/rect"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                ripple:rv_type="rectangle">

                <LinearLayout
                    android:id="@+id/about"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:src="@drawable/ic_info_outline_grey600_36dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginLeft="30dp"
                        android:gravity="center_vertical"
                        android:text="关于"
                        android:textColor="#C3C3C3"
                        android:textSize="15sp" />
                </LinearLayout>
            </com.energyfuture.symphony.m3.ripple.RippleView>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#4B5B63"
                android:clickable="false" />
            <!--退出  id= back_login-->
            <com.energyfuture.symphony.m3.ripple.RippleView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                ripple:rv_type="rectangle">

                <LinearLayout
                    android:id="@+id/back_login"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:src="@drawable/exit_96" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginLeft="30dp"
                        android:gravity="center_vertical"
                        android:text="退出"
                        android:textColor="#C3C3C3"
                        android:textSize="15sp" />
                </LinearLayout>
            </com.energyfuture.symphony.m3.ripple.RippleView>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#4B5B63"
                android:clickable="false" />

            <!--用户  id= userinfo-->

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#4B5B63"
                android:clickable="false" />
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>