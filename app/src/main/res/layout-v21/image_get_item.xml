<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">
    <com.energyfuture.symphony.m3.ui.MyEditText
        android:id="@+id/image_get_item_number"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:maxLength="6"
        android:paddingBottom="5dp"
        android:background="@null"
        android:textSize="13sp"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:paddingLeft="5dp"/>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_get_item_show"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_switch_camera_grey600_36dp"/>
        <ProgressBar
            android:id="@+id/image_get_item_progressbar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:visibility="gone"/>
        </FrameLayout>
</LinearLayout>