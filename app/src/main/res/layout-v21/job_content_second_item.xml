<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="fill_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="40dp"
        android:background="#ccc"
        android:layout_marginTop="2dp"/>
    <LinearLayout
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical"
        android:background="@drawable/button_rect_list_normal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:id="@+id/job_layout"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent"
            android:gravity="center_vertical">
            <com.energyfuture.symphony.m3.ui.RoundImageView
                android:id="@+id/job_coutent_pic3"
                android:layout_marginLeft="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/green_round_child"/>
            <TextView
                android:id="@+id/job_coutent_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="外观检查"
                android:layout_toRightOf="@id/job_coutent_pic3"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginLeft="30dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical">
            <LinearLayout
                android:id="@+id/job_content_del"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:visibility="invisible">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_rect_list_normal"
                    android:src="@drawable/ic_delete_grey600_24dp"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/job_coutent_pic2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_keyboard_arrow_right_grey600_24dp"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/seconed_view"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="40dp"
        android:background="#ccc"
        android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/job_layout_hide"
        android:layout_below="@id/job_layout"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone">
        <com.energyfuture.symphony.m3.ui.ListViewForScrollView
            android:id="@+id/job_list_hide"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>
    </LinearLayout>

</LinearLayout>