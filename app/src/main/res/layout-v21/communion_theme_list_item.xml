<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:elevation="4dp"

    >
    <LinearLayout
        android:background="@drawable/button_rect_list_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.energyfuture.symphony.m3.ui.RoundImageView
                    android:id="@+id/theme_person_img"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/wanxin"
                    />
                <TextView
                    android:id="@+id/theme_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:text="万鑫"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_marginLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/theme_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#999"
                    android:textSize="14sp"
                    android:text="东郊变电站例行巡检/红外热成像带点检测/1205东西/A相"/>
                <TextView
                    android:id="@+id/theme_title"
                    android:layout_below="@id/theme_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:text="红外检测异常，寻求协助"/>
                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_below="@+id/theme_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/theme_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#999"
                        android:textSize="14sp"
                        android:text="下午14:45"/>
                    <TextView
                        android:id="@+id/theme_reply_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:textColor="#999"
                        android:textSize="14sp"
                        android:text="12条讨论信息"/>
                    <TextView
                        android:id="@+id/theme_unread_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:textColor="#F69D0C"
                        android:textSize="14sp"
                        android:text="[3条未读]"/>
                    <TextView
                        android:id="@+id/theme_call"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:textColor="#F69D0C"
                        android:textSize="14sp"
                        android:text="[有人@我]"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
