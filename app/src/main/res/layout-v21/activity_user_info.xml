<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.energyfuture.symphony.m3.activity.UserInfoActivity"
    android:background="#F5F5F5">
    <RelativeLayout
        android:id="@+id/title"
        android:background="@color/theme_default_primary"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <LinearLayout
            android:id="@+id/toolbar_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:background="@drawable/button_rect_list_normal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back_white_24dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="个人信息"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:textColor="#fff"
            android:textSize="20sp"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/user_info_ll1"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:background="@color/theme_default_primary"
        android:gravity="center_horizontal"
        android:layout_below="@id/title">

        <com.energyfuture.symphony.m3.ui.RoundImageView
            android:id="@+id/user_icon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="60dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="姓名："
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="xxx"
                android:textSize="20sp"/>
            </LinearLayout>
        </LinearLayout>
    <RelativeLayout
        android:id="@+id/user_info_rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:layout_below="@id/user_info_ll1"
        android:background="@drawable/layoutclickbg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/pic1"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_keyboard_arrow_right_grey600_24dp"/>
        <TextView
            android:id="@+id/user_nameinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XXX"
            android:textSize="18sp"
            android:layout_toLeftOf="@id/pic1"
            android:textColor="#000000"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"/>
        </RelativeLayout>
    <RelativeLayout
        android:id="@+id/user_info_rl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:layout_below="@id/user_info_rl1"
        android:background="@drawable/layoutclickbg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/pic2"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_keyboard_arrow_right_grey600_24dp"/>
    </RelativeLayout>
    <Button
        android:id="@+id/user_info_back"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="30dp"
        android:textColor="#ffffff"
        android:text="退出"
        android:textSize="18sp"
        android:background="@drawable/affirm_button_sel"/>
</RelativeLayout>
