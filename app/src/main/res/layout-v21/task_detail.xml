<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:clickable="true"
    android:layout_height="72dp">
    <RelativeLayout
        android:id="@+id/id_detail_cardview"
        android:orientation="horizontal"
        android:background="@drawable/button_rect_list_normal"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/wifi_hint"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:background="#FEE3AC"
            android:alpha="50"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:visibility="gone">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/warning_24dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未连接wifi设备"
                android:textColor="#FE9E2E"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/task_receive_type"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:scaleType="fitCenter"
            />
        <LinearLayout android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/task_receive_type"
            android:gravity="center_vertical">
            <LinearLayout android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/task_receive_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginEnd="10dp"
                    android:textSize="18sp"
                    android:text="#1主变压器巡检作业"
                    android:maxLines="20"
                    android:textColor="#000000">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="fill_parent"
                android:layout_toRightOf="@id/task_receive_type"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/substation_name"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="330kV某某变压站"
                    android:maxLines="1"
                    android:textColor="#505050"/>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/project"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                >
                <TextView
                    android:id="@+id/tack_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="一号小组"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/jindutotal"
                android:layout_toRightOf="@id/project"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="26dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="15dp"
                >
                <TextView
                    android:id="@+id/task_receive_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#A8A8A8"
                    android:layout_gravity="center_vertical"
                    android:text="进行中"
                    />
                <FrameLayout
                    android:id="@+id/receive_progressBar_FrameLayout"
                    android:layout_width="wrap_content"
                    android:layout_below="@id/task_receive_state"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content">
                    <ProgressBar
                        android:id="@+id/task_progressBar"
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:layout_gravity="center_vertical"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progressDrawable="@drawable/myprogressbar"
                        android:max="100"
                        android:progress="50"
                        />
                    <TextView
                        android:id="@+id/task_progressbar_text"
                        android:layout_width="fill_parent"
                        android:layout_height="14dp"
                        android:textSize="10sp"
                        android:gravity="center_vertical|center_horizontal"
                        android:textColor="#000000"/>
                </FrameLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/index_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@id/jindutotal"
                android:background="@drawable/list_blue"
                />
        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>