<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
  <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/capture_card_bg"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/noise_item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一般检测"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"/>
            <LinearLayout
                android:id="@+id/noise_item_image1"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_rect_list_normal"
                android:src="@drawable/ic_delete_grey600_24dp"                />
                </LinearLayout>
            <TextView
                android:id="@+id/noise_item_standard"
                android:layout_width="60dp"
                android:gravity="center"
                android:layout_height="30dp"
                android:text="标准"
                android:textSize="14sp"
                android:textColor="#919191"
                android:layout_toLeftOf="@id/noise_item_image1"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/noise_item_method"
                android:layout_width="60dp"
                android:gravity="center"
                android:layout_height="30dp"
                android:text="方法"
                android:textSize="14sp"
                android:textColor="#919191"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/noise_item_standard"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="#ccc"
            android:layout_marginTop="2dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:padding="10dp">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/noise_item_text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="是否符合标准"
                    android:textColor="#919191"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@id/noise_item_text1">
                    <CheckBox
                        android:id="@+id/noise_checkYes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/checkboxyes"
                        android:paddingLeft="5dp"
                        android:textColor="#919191"
                        android:textSize="24sp"
                        android:text="是"/>
                    <CheckBox
                        android:id="@+id/noise_checkNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/checkboxno"
                        android:paddingLeft="5dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="#919191"
                        android:textSize="24sp"
                        android:text="否"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">
                <TextView
                    android:id="@+id/noise_item_text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="检测结果"
                    android:textColor="#919191"
                    android:textSize="14sp"/>
                <com.energyfuture.symphony.m3.ui.MyEditText
                    android:id="@+id/noise_item_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="5dp"
                    android:background="@null"
                    android:singleLine="true"
                    android:maxLength="200"
                    android:imeOptions="actionNext"
                    android:hint="请输入检测结果"
                    android:textColorHint="#DDDDDC"
                    android:textSize="18sp"
                    android:layout_below="@id/noise_item_text2"
                    android:textColor="#000000"/>
            </RelativeLayout>
        </LinearLayout>
        <com.energyfuture.symphony.m3.ui.GridViewforListView
            android:id="@+id/noise_item_gv"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="26dp"
            android:visibility="gone"
            android:numColumns="5"
            android:stretchMode="columnWidth"
            android:gravity="center"/>
        <TextView
            android:id="@+id/noise_item_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注："
            android:textSize="14sp"
            android:textColor="#919191"
            android:layout_marginLeft="35dp"
            android:layout_centerVertical="true"/>
        <com.energyfuture.symphony.m3.ui.MyEditText
            android:id="@+id/noise_item_remarkinput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:paddingBottom="5dp"
            android:background="@null"
            android:singleLine="true"
            android:maxLength="200"
            android:imeOptions="actionNext"
            android:textSize="18sp"
            android:hint="请输入备注信息"
            android:layout_marginLeft="35dp"
            android:textColorHint="#DDDDDC"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            />
        <LinearLayout
            android:id="@+id/noise_item_ll"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="变压器噪声声级测量记录"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="冷却风扇运行组数"
                android:textSize="14sp"
                android:textColor="#919191"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="油泵运行台数"
                android:textSize="14sp"
                android:textColor="#919191"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp">
                <com.energyfuture.symphony.m3.ui.MyEditText
                android:id="@+id/noise_item_groupcount"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="50dp"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:background="@null"
                android:singleLine="true"
                android:maxLength="11"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:textSize="18sp"
                android:textColor="#000000"/>
                <com.energyfuture.symphony.m3.ui.MyEditText
                android:id="@+id/noise_item_number"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="50dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:maxLength="11"
                android:imeOptions="actionNext"
                android:paddingBottom="5dp"
                android:inputType="number"
                android:background="@null"
                android:textSize="18sp"
                android:textColor="#000000"/>
            </LinearLayout>

        <com.energyfuture.symphony.m3.ui.GridViewforListView
            android:id="@+id/noise_gridview_group"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="20dp"
            android:numColumns="2"
            android:stretchMode="columnWidth"
            android:verticalSpacing="12dp"
            android:gravity="center"
            android:padding="10dp"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="噪声平均值"
              android:textColor="#919191"
              android:textSize="14sp"
              android:layout_marginLeft="30dp"/>
          <com.energyfuture.symphony.m3.ui.MyEditText
              android:id="@+id/noise_avg"
              android:layout_width="match_parent"
              android:layout_weight="7"
              android:layout_height="wrap_content"
              android:imeOptions="actionDone"
              android:paddingBottom="5dp"
              android:inputType="number"
              android:digits="1234567890-."
              android:background="@null"
              android:textSize="18sp"
              android:textColor="#000000"
              android:layout_marginTop="5dp"
              android:layout_marginBottom="5dp"
              android:layout_marginLeft="30dp"
              android:layout_marginRight="30dp"/>
        </LinearLayout>
    </LinearLayout>
  </ScrollView>
</RelativeLayout>