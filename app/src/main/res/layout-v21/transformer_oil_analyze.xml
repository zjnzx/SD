<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/capture_card_bg">
        <com.energyfuture.symphony.m3.ui.MyEditText
            android:id="@+id/transformer_oil_et1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:paddingBottom="5dp"
            android:editable="false"
            android:background="@null"
            android:textSize="15sp"
            android:textColor="#161616"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="变压器油样常规测试分析"/>
        </RelativeLayout>
    <LinearLayout
        android:id="@+id/transformer_oil__ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_below="@id/relativeLayout"
        android:background="@drawable/capture_card_bg">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="#000000"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="测试项目"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="#000000"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="执行标准"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="#000000"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="检测结果"/>
    </LinearLayout>

    <com.energyfuture.symphony.m3.ui.ListViewForScrollView
        android:id="@+id/transformer_oil_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/transformer_oil__ll"
        android:background="@drawable/capture_card_bg"/>
</RelativeLayout>