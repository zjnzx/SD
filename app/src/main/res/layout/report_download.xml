<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_progressing"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            layout="@layout/tool_bar"/>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.energyfuture.symphony.m3.ui.MyEditText
                android:id="@+id/report_keyword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:paddingBottom="5dp"
                android:background="@null"
                android:hint="输入关键字、站名、供电局"
                android:textColorHint="#ffdbdbda"
                android:textColor="#000"
                android:text=""/>
            <ImageView
                android:id="@+id/report_search2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:background="@drawable/button_rect_list_normal"
                android:src="@drawable/ic_pageview_grey600_36dp"/>
        </LinearLayout>
        <com.energyfuture.symphony.m3.ui.MyEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingBottom="10dp"
            android:background="@null"
            android:editable="false"
            android:textColor="#666666"
            android:textSize="20sp"
            android:text=""/>
        <FrameLayout
            android:layout_below="@id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/report_recycle_download"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_horizontal_margin"/>
            <TextView
                android:id="@+id/report_prompt_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="#ccc"
                android:text="暂无未下载报告"/>
            <ProgressBar
                android:id="@+id/report_progressBar_download"
                android:layout_gravity="center"
                android:padding="72dp"
                android:alpha="0.2"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="false" />
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/report_background_download"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#30000000"
        android:visibility="gone"/>
</FrameLayout>
