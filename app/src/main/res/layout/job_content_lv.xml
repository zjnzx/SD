<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/job_content_drawer"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:id="@+id/tool_bar"
            layout="@layout/tool_bar"/>
        <include
            android:id="@+id/job_row_name"
            layout="@layout/task_detail"/>
        <FrameLayout
            android:layout_below="@id/title"
            android:layout_width="match_parent"
            android:layout_height="650dp">
            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/job_swipe"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ListView
                    android:id="@+id/job_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:divider="#D6D6D6"
                    android:dividerHeight="3px">
                </ListView>

            </android.support.v4.widget.SwipeRefreshLayout>
            <ProgressBar
                android:id="@+id/progressBar_job"
                android:layout_gravity="center"
                android:padding="72dp"
                android:alpha="0.2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="false" />
        </FrameLayout>
        <Button
            android:id="@+id/job_finish"
            android:layout_width="400dp"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="现场作业完成"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:background="@drawable/affirm_button_sel"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="80dp"
        android:id="@+id/child_menu"
        android:layout_width="@dimen/drawer_width"
        android:layout_height="match_parent"
        android:background="#0288D1"
        android:layout_gravity="end"
        android:clickable="true"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="45dp">
            <ImageView
                android:id="@+id/menu"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_list_white_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/menu"
                android:text="任务索引"
                android:textSize="20dp"
                android:textColor="#FFFFFF"/>

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_arrow_forward_white_24dp"/>
            </RelativeLayout>
        <ListView
            android:id="@+id/select_condition"
            android:clipToPadding="false"
            android:background="#B5B5B5"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#30000000"
        android:visibility="gone"/>
</android.support.v4.widget.DrawerLayout>