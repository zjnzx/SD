<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp">
    <RelativeLayout
        android:id="@+id/id_progressing_cardview"
        android:orientation="horizontal"
        android:background="@drawable/button_rect_list_normal"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/task_type"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:textSize="22dp"
            android:background="@drawable/green"/>
        <LinearLayout android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/task_type"
            android:gravity="center_vertical">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <!--<TextView
                        android:id="@+id/project_name"
                        android:layout_width="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginEnd="10dp"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="330kV 海石湾变电站"
                        android:maxLines="1"
                        android:textColor="@color/text"/>-->

                    <!--<View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/dividers"/>-->

                    <TextView
                        android:id="@+id/task_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginEnd="10dp"
                        android:textSize="18sp"
                        android:text="330kV 某某变电站巡检"
                        android:maxLines="20"
                        android:textColor="#000000">
                    </TextView>
                </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="fill_parent"
                android:layout_toRightOf="@id/task_type"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/id_bureau"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="4dp"
                    android:textColor="#505050"
                    android:textSize="12sp"
                    android:clickable="false"
                    android:text="供电局"/>
                <TextView
                    android:id="@+id/id_voltage"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="4dp"
                    android:textSize="12sp"
                    android:textColor="#505050"
                    android:clickable="false"
                    android:text="330kV"/>
                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="2015-09-07/2015-10-07"
                    android:maxLines="1"
                    android:textColor="#505050"/>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/project"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="一号小组"/>
                <com.energyfuture.symphony.m3.ui.RoundImageView
                    android:id="@+id/project_people"
                    android:layout_centerInParent="true"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_below="@id/group"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/jindutotal"
                android:layout_toRightOf="@id/project"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="15dp">
                <TextView
                    android:id="@+id/task_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#A8A8A8"
                    android:layout_gravity="center_vertical"
                    android:text="进行中"/>
                <FrameLayout
                    android:id="@+id/progressBar_FrameLayout"
                    android:layout_width="wrap_content"
                    android:layout_below="@id/task_state"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content">
                    <ProgressBar
                        android:id="@+id/task_progressBar"
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:layout_gravity="center_vertical"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progressDrawable="@drawable/myprogressbar"
                        android:max="100"
                        android:progress="50"/>
                    <TextView
                        android:id="@+id/task_progressbar_text"
                        android:layout_width="fill_parent"
                        android:layout_height="14dp"
                        android:textSize="10sp"
                        android:gravity="center_vertical|center_horizontal"
                        android:textColor="#000000"/>
                </FrameLayout>
            </RelativeLayout>
           <!-- <ImageView
                android:id="@+id/narrow_progressing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="16dp"
                android:layout_toRightOf="@id/jindutotal"
                android:src="@drawable/ic_more_vert_grey600_18dp"/>-->
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>