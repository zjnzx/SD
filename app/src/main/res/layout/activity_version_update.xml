<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:background="@color/theme_default_primary"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <LinearLayout
                android:id="@+id/theme_back"
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:background="@drawable/button_rect_list_normal"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true">
                <ImageView
                    android:id="@+id/update_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:src="@drawable/ic_arrow_back_white_24dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="20sp"
                android:layout_marginTop="41dp"
                android:text="版本更新"
                android:layout_centerHorizontal="true" />

            <!--<TextView-->
            <!--android:id="@+id/check_update"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textColor="#fff"-->
            <!--android:text="检查更新"-->
            <!--android:textSize="20sp"-->
            <!--android:layout_marginRight="12dp"-->
            <!--android:layout_alignTop="@+id/textView1"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_alignParentEnd="true" />-->

            <Button
                android:id="@+id/check_bt"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="检查更新"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/textView1"
                android:layout_marginRight="14dp"
                android:background="@drawable/buttonstyle"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/now_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:textSize="20sp"
                android:text="当前版本："
                android:textColor="#3E3E3E" />

            <TextView
                android:id="@+id/version_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:text=""
                android:textColor="#444"
                android:textSize="20sp" />
        </LinearLayout>
        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#2B2B2B"
            />
        <TextView
            android:id="@+id/update_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:text="更新日志"
            android:textColor="#3E3E3E" />
        <ListView
            android:id="@+id/log_listview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>
