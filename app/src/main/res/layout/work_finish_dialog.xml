<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="30dp">
       <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请确认"
            android:textColor="#000000"
            android:textSize="18sp"/>
        <RelativeLayout
            android:id="@+id/work_finish_rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已恢复因作业临时变更的全部设备,设施状态"
                android:textColor="#000000"
                android:textSize="16dp"/>
            <CheckBox
                android:id="@+id/checkbox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#CAC0B1"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentRight="true"
                android:button="@drawable/mycheckbox"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/work_finish_rl2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="525dp"
                android:layout_height="wrap_content"
                android:text="已将作业物资搬离,清扫,整理现场,确认无遗留物"
                android:textColor="#000000"
                android:textSize="16dp"/>
            <CheckBox
                android:id="@+id/checkbox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#CAC0B1"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentRight="true"
                android:button="@drawable/mycheckbox"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/work_finish_rl3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="525dp"
                android:layout_height="wrap_content"
                android:text="现场工作已完成,并核实"
                android:textColor="#000000"
                android:textSize="16dp"/>
            <CheckBox
                android:id="@+id/checkbox3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#CAC0B1"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal"
                android:button="@drawable/mycheckbox"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center_vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">
                <Button
                    android:id="@+id/cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="取消"
                    android:background="#ffffff"
                    android:textColor="#000000"
                    android:textSize="18sp"/>
                <Button
                    android:id="@+id/confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="确认"
                    android:background="#ffffff"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>
        </RelativeLayout>
</LinearLayout>