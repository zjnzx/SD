<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.energyfuture.symphony.m3.activity.UserInfoActivity"
    android:background="#EEEEEE">
    <LinearLayout
        android:id="@+id/user_info_ll1"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:background="@color/theme_default_primary"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人信息"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:layout_marginTop="40dp"/>
        <com.energyfuture.symphony.m3.ui.RoundImageView
            android:id="@+id/user_icon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="60dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="姓名："
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="xxx"
                android:textSize="20sp"/>
            </LinearLayout>
        </LinearLayout>
    <RelativeLayout
        android:id="@+id/user_info_rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:layout_below="@id/user_info_ll1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textSize="25sp"
            android:textColor="#000000"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/pic1"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_keyboard_arrow_right_grey600_24dp"/>
        <TextView
            android:id="@+id/user_nameinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XXX"
            android:textSize="25sp"
            android:layout_toLeftOf="@id/pic1"
            android:textColor="#000000"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"/>
        </RelativeLayout>
    <RelativeLayout
        android:id="@+id/user_info_rl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:layout_below="@id/user_info_rl1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:textSize="25sp"
            android:textColor="#000000"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/pic2"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_keyboard_arrow_right_grey600_24dp"/>
    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="30dp"
        android:textColor="#ffffff"
        android:text="退出"
        android:textSize="25sp"
        android:background="@drawable/affirm_button_sel"/>
</RelativeLayout>
