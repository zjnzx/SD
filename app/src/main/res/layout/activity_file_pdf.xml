<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.energyfuture.symphony.m3.activity.FilePdfActivity">
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:background="@color/theme_default_primary"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <LinearLayout
            android:id="@+id/menu_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:background="@drawable/button_rect_list_normal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/menu_back_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back_white_24dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_marginTop="41dp"
            android:text="文件选择"
            android:layout_toRightOf="@id/menu_back"/>

        <Button
            android:id="@+id/check_bt"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="更新文件"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/textView1"
            android:layout_marginRight="14dp"
            android:background="@drawable/buttonstyle"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:background="?attr/colorPrimary">
        <TextView
            android:id="@+id/filepath"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:text="路径："
            android:layout_marginLeft="50dp"
            android:gravity="center"/>
        </LinearLayout>
<ListView
    android:id="@+id/list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>
</LinearLayout>
