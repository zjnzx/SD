<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:clickable="true"
    android:layout_height="72dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="@drawable/button_rect_list_normal">
                <ImageView
                    android:id="@+id/task_image"
                    android:layout_centerVertical="true"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/green_round"/>
                <TextView
                    android:id="@+id/task_name"
                    android:layout_centerVertical="true"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/task_image"
                    android:textSize="16sp"
                    android:textColor="#ff3d3d3d"
                    android:text="1111111111111111111"
                    />
                <com.energyfuture.symphony.m3.ui.RoundImageView
                    android:id="@+id/task_person1"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/task_person2"
                    android:layout_marginRight="10dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
                <com.energyfuture.symphony.m3.ui.RoundImageView
                    android:id="@+id/task_person2"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/task_person3"
                    android:layout_marginRight="10dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
            <com.energyfuture.symphony.m3.ui.RoundImageView
                android:id="@+id/task_person3"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/task_person4"
                android:layout_marginRight="10dp"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
            <com.energyfuture.symphony.m3.ui.RoundImageView
                android:id="@+id/task_person4"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/task_person5"
                android:layout_marginRight="10dp"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
            <com.energyfuture.symphony.m3.ui.RoundImageView
                android:id="@+id/task_person5"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/task_person6"
                android:layout_marginRight="10dp"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
            <com.energyfuture.symphony.m3.ui.RoundImageView
                android:id="@+id/task_person6"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/task_person7"
                android:layout_marginRight="10dp"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
            <com.energyfuture.symphony.m3.ui.RoundImageView
                android:id="@+id/task_person7"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/task_detail"
                android:layout_marginRight="10dp"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
                <LinearLayout
                    android:id="@+id/task_detail"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/task_state"
                        android:layout_centerVertical="true"
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="16sp"
                        android:maxLines="2"
                        android:textColor="#A8A8A8"
                        android:text="1111"/>
                    <FrameLayout
                        android:id="@+id/layout_rate"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ProgressBar
                            android:id="@+id/task_progressBar"
                            android:layout_width="wrap_content"
                            android:layout_height="10dp"
                            android:layout_gravity="center_vertical"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:progressDrawable="@drawable/myprogressbar"
                            android:max="100"
                            android:progress="50"
                            />
                        <TextView
                            android:id="@+id/progress_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            android:textColor="#000000"
                            android:textSize="8sp"
                            android:text="50/100"/>
                    </FrameLayout>
                </LinearLayout>
                <!--<ImageView
                    android:id="@+id/task_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_rect_list_normal"
                    android:src="@drawable/ic_more_vert_grey600_18dp"/>-->
        </RelativeLayout>
</android.support.v7.widget.CardView>