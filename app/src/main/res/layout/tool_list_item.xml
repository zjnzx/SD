<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/toolid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/tool_name"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="123"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:textColor="#000000"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/tool_model"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="123"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:textColor="#000000"
        android:textSize="12sp"/>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/tool_count_sub"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/button_rect_list_normal"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_remove_black_36dp"
            />
        <EditText
            android:id="@+id/tool_count"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_toRightOf="@id/tool_count_sub"
            android:text="123"
            android:textSize="14sp"
            android:textColor="#000000"
            android:background="#DDEAF6"
            android:numeric="decimal"
            android:singleLine="true"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/tool_count_add"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/button_rect_list_normal"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tool_count"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_add_black_36dp"/>
        <TextView
            android:id="@+id/tool_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="ä¸ª"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:layout_toRightOf="@id/tool_count_add"/>
    </RelativeLayout>
</LinearLayout>