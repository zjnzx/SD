<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="100dp">
        <com.energyfuture.symphony.m3.ui.MyEditText
            android:id="@+id/safe_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="18dp"
            android:paddingBottom="5dp"
            android:editable="false"
            android:background="@null"
            android:textColor="#161616"
            android:text="安全确认"
            />
        <TextView
            android:id="@+id/hide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="#000000"/>
        <Button
            android:id="@+id/button"
            android:layout_width="400dp"
            android:layout_height="55dp"
            android:paddingTop="5dp"
            android:layout_above="@id/hide"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="安全确认，开展巡检作业"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:background="@drawable/affirm_button_sel"/>
        <RelativeLayout
            android:id="@+id/confirm_person"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_above="@id/button"
            android:paddingLeft="10dp"
            android:layout_marginBottom="20dp">
            <RelativeLayout
                android:id="@+id/confirm_person_rl"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent">
                <TextView
                    android:id="@+id/safe_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#161616"
                    android:text="确认人员:"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/safetyconfirm_person_recyclerView"
                    android:layout_toRightOf="@id/safe_tv"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_height="fill_parent" />
            </RelativeLayout>

        </RelativeLayout>
        <ListView
            android:id="@+id/safetytest_listview"
            android:layout_marginTop="10dp"
            android:layout_below="@id/safe_layout"
            android:layout_above="@id/confirm_person"
            android:divider="#00000000"
            android:dividerHeight="18dp"
            android:layout_width="match_parent"
            android:layout_height="fill_parent">
        </ListView>
    </RelativeLayout>
</android.support.v7.widget.CardView>