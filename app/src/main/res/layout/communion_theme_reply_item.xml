<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/button_rect_list_normal"
    android:orientation="vertical"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.energyfuture.symphony.m3.ui.RoundImageView
            android:id="@+id/reply_person_img"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            />
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/reply_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:text="回复人姓名"/>
                <TextView
                    android:id="@+id/reply_time"
                    android:layout_toRightOf="@id/reply_person"
                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#999"
                    android:textSize="14sp"
                    android:text="时间"/>
                <ImageView
                    android:id="@+id/reply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/button_rect_list_normal"
                    android:src="@drawable/ic_textsms_grey600_18dp"/>
                <TextView
                    android:id="@+id/reply_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="#999"
                    android:textSize="14sp"
                    android:text="111"/>
            </RelativeLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/reply_person_name"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#0288D1"
                    android:textSize="15sp"
                    android:text="姓名1"/>
                <TextView
                    android:id="@+id/reply_text"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:text="回复"/>
                <TextView
                    android:id="@+id/reply_object_name"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#0288D1"
                    android:textSize="15sp"
                    android:text=" 姓名2"/>
                <TextView
                    android:id="@+id/reply_call"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#0288D1"
                    android:textSize="15sp"
                    android:text=" @某人 "/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/reply_content_layout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/reply_content"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#999"
                    android:textSize="15sp"
                    android:text="回复内容"/>
                <TextView
                    android:id="@+id/reply_call2"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/reply_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#0288D1"
                    android:textSize="15sp"
                    android:text=" @ 某人"/>
                <TextView
                    android:id="@+id/reply_content2"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/reply_call2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#999"
                    android:textSize="15sp"
                    android:text="回复内容"/>
            </LinearLayout>
            <GridView
                android:id="@+id/reply_item_gridview"
                android:layout_below="@id/reply_content"
                android:layout_marginTop="1dp"
                android:horizontalSpacing="2dp"
                android:verticalSpacing="2dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="6" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
