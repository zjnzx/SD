<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:background="@color/theme_default_primary"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <LinearLayout
            android:id="@+id/menu_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:background="@drawable/button_rect_list_normal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/menu_back_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back_white_24dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_marginTop="41dp"
            android:text="新建沟通交流"
            android:layout_toRightOf="@id/menu_back"/>
        <LinearLayout
            android:id="@+id/menu_check"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:background="@drawable/button_rect_list_normal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/menu_check_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_check_white_24dp"/>
        </LinearLayout>

    </RelativeLayout>
    <!--<android.support.v7.widget.Toolbar-->
        <!--android:id="@+id/toolbar_theme_create"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:minHeight="?attr/actionBarSize"-->
        <!--android:background="?attr/colorPrimary"-->
        <!--android:paddingTop="@dimen/tool_bar_top_padding"-->
        <!--android:transitionName="actionBar"/>-->
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_my_location_grey600_24dp"/>
        <EditText
            android:id="@+id/create_part"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textColor="#000"
            android:textColorHint="#999"
            android:hint="111"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ccc"></View>
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_my_location_grey600_24dp"/>
        <EditText
            android:id="@+id/create_theme"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textColor="#000"
            android:textColorHint="#ffcdcdcc"
            android:hint="请输入沟通交流主题"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ccc"></View>
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_comment_grey600_24dp"/>
        <EditText
            android:id="@+id/create_content"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textColor="#000"
            android:textColorHint="#ffcdcdcc"
            android:hint="请输入沟通交流主题内容"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ccc"></View>
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_group_add_grey600_24dp"/>
        <com.energyfuture.symphony.m3.ui.MultiSpinnerCommCreate
            android:id="@+id/spinnerMulti"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="选择交流群成员"
            android:textColorHint="#ffcdcdcc"
            android:textSize="18sp"
            android:textColor="#000"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ccc"></View>
    <RelativeLayout
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/create_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_attachment_grey600_24dp"
            android:layout_centerVertical="true"/>
        <EditText
            android:layout_toRightOf="@id/create_img"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:editable="false"
            android:textColor="#000"
            android:textColorHint="#ffcdcdcc"
            android:hint="附件"
            android:layout_centerVertical="true"/>
        <RelativeLayout
            android:id="@+id/create_add"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/button_rect_list_normal"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp">
            <ImageView
                android:id="@+id/create_add_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_black_36dp"
                android:layout_centerInParent="true"/>
            </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ccc"></View>
    <GridView
        android:id="@+id/create_gridview"
        android:layout_marginTop="1dp"
        android:horizontalSpacing="2dp"
        android:verticalSpacing="2dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="5" >
    </GridView>
</LinearLayout>
