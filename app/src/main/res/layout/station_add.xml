<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MyActivity"
    android:id="@+id/drawer"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:background="@color/theme_default_primary"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <LinearLayout
                android:id="@+id/menu_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="@drawable/button_rect_list_normal"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true">
                <ImageView
                    android:id="@+id/menu_back_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_back_white_24dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="20sp"
                android:layout_marginTop="41dp"
                android:text="新增变电站"
                android:layout_toRightOf="@id/menu_back"/>
            <LinearLayout
                android:id="@+id/menu_check"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="@drawable/button_rect_list_normal"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">
                <ImageView
                    android:id="@+id/menu_check_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_check_white_24dp"/>
            </LinearLayout>

        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/relativeLayout"
            android:background="@drawable/capture_card_bg"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="30dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:id="@+id/stationnametext"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|right"
                        android:text="变电站名称"
                        android:textSize="20sp"
                        android:textColor="#919191"
                        android:layout_centerVertical="true"/>
                    <com.energyfuture.symphony.m3.ui.MyEditText
                        android:id="@+id/stationname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:background="@null"
                        android:textSize="18sp"
                        android:hint="必填项"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/stationnametext"
                        android:layout_centerVertical="true"
                        android:textColorHint="#DDDDDC"
                        android:textColor="#000000"
                        android:tag="变电站名称"/>
                    </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp">
                    <TextView
                        android:id="@+id/subcodetext"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|right"
                        android:text="变电站编码"
                        android:textSize="20sp"
                        android:textColor="#919191"
                        android:layout_centerVertical="true"/>
                    <com.energyfuture.symphony.m3.ui.MyEditText
                        android:id="@+id/subcode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:background="@null"
                        android:textSize="18sp"
                        android:hint="必填项"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/subcodetext"
                        android:layout_centerVertical="true"
                        android:textColorHint="#DDDDDC"
                        android:textColor="#000000"
                        android:tag="变电站编码"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp">
                    <TextView
                        android:id="@+id/bureauidtext"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|right"
                        android:text="电力公司"
                        android:textSize="20sp"
                        android:textColor="#919191"
                        android:layout_centerVertical="true"/>
                    <com.energyfuture.symphony.m3.ui.MyEditText
                        android:id="@+id/bureauid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:background="@null"
                        android:textSize="18sp"
                        android:hint="必填项"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/bureauidtext"
                        android:layout_centerVertical="true"
                        android:textColorHint="#DDDDDC"
                        android:textColor="#000000"
                        android:tag="电力公司"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp">
                    <TextView
                        android:id="@+id/voltagetext"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|right"
                        android:text="电压等级"
                        android:textSize="20sp"
                        android:textColor="#919191"
                        android:layout_centerVertical="true"/>
                    <com.energyfuture.symphony.m3.ui.MyEditText
                        android:id="@+id/voltage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:background="@null"
                        android:textSize="18sp"
                        android:hint="必填项"
                        android:editable="false"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/voltagetext"
                        android:focusableInTouchMode="false"
                        android:layout_centerVertical="true"
                        android:textColorHint="#DDDDDC"
                        android:textColor="#000000"
                        android:tag="电压等级"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp">
                    <TextView
                        android:id="@+id/visibletext"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|right"
                        android:text="是否可用"
                        android:textSize="20sp"
                        android:textColor="#919191"
                        android:layout_centerVertical="true"/>
                    <RadioGroup
                        android:id="@+id/radioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/visibletext"
                        android:layout_centerVertical="true">
                        <RadioButton
                            android:id="@+id/radioYes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="是"
                            android:checked="true"
                            android:textColor="#919191"
                            android:textSize="20dp"/>
                        <RadioButton
                            android:layout_marginLeft="50dp"
                            android:id="@+id/radioNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="否"
                            android:textColor="#919191"
                            android:textSize="20dp"/>
                    </RadioGroup>
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>
