<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    tools:context=".MyActivity"
    android:id="@+id/drawer"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:background="@color/theme_default_primary"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <LinearLayout
                android:id="@+id/menu_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="@drawable/button_rect_list_normal"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true">
                <ImageView
                    android:id="@+id/menu_back_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_back_white_24dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="20sp"
                android:layout_marginTop="41dp"
                android:text="巡检项目"
                android:layout_toRightOf="@id/menu_back"/>

            <RelativeLayout
                android:id="@+id/menu_head"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="@drawable/button_rect_list_normal"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">
                <com.energyfuture.symphony.m3.ui.RoundImageView
                    android:id="@+id/menu_head_image"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
                </RelativeLayout>
            <LinearLayout
                android:id="@+id/menu_select"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_toLeftOf="@id/menu_head"
                android:background="@drawable/button_rect_list_normal"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true">
                <ImageView
                    android:id="@+id/menu_select_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_search_white_24dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/menu_add_project"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_toLeftOf="@id/menu_select"
                android:background="@drawable/button_rect_list_normal"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_playlist_add_white_24dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/menu_download"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_toLeftOf="@id/menu_add_project"
                android:background="@drawable/button_rect_list_normal"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/menu_download_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#FFFFFF"
                    android:textSize="24dp"/>
            </LinearLayout>
        </RelativeLayout>

        <FrameLayout
            android:layout_below="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/none_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:textColor="#000000"
                android:visibility="invisible"
                android:textSize="23dp"/>
            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/swipe_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/list"
                    android:clipToPadding="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_horizontal_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    />
            </android.support.v4.widget.SwipeRefreshLayout>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_gravity="center"
                android:padding="72dp"
                android:alpha="0.2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="false" />
            <com.energyfuture.symphony.m3.floatingbutton.FloatingActionButton
                android:id="@+id/add_project"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_margin="16dp"
                android:visibility="gone"
                android:src="@drawable/ic_add_white_24dp"
                fab:fab_colorNormal="@color/accent"
                fab:fab_colorPressed="@color/accent_pressed"
                fab:fab_colorRipple="@color/ripple"/>
        </FrameLayout>
        <LinearLayout
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#30000000"
            android:visibility="gone"/>
    </RelativeLayout>

    <LinearLayout
        android:paddingTop="@dimen/tool_bar_top_padding"
        android:id="@+id/menuList"
        android:layout_width="@dimen/drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@color/list_background_normal"
        android:orientation="vertical">
        <LinearLayout
            android:paddingTop="12dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_height="60dp">
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:paddingLeft="10dp"
                android:layout_height="wrap_content"
                >
                <ImageButton
                    android:transitionName="fab"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@drawable/ic_filter_list_black_36dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="3"
                android:layout_width="0dp"

                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="72dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textColor="#000000"
                    android:text="筛选"
                    android:textSize="18sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/submit_select_condition"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:transitionName="fab"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@drawable/ic_check_black_36dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/father_menu_back"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:transitionName="fab"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@drawable/ic_arrow_forward_black_36dp"/>
            </RelativeLayout>
        </LinearLayout>
        <View android:clickable="false" android:layout_width="match_parent" android:layout_height="1px" android:background="@color/dividers"/>

        <LinearLayout
            android:id="@+id/id_slidemenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:foreground="@drawable/button_rect_list_normal"
                >
                <LinearLayout
                    android:id="@+id/select_roject_state_LinearLayout"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"

                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:textColor="#000000"
                            android:text="仅显示进行中项目"
                            android:textSize="16sp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        >
                        <Switch
                            android:background="@null"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/select_roject_state"
                            android:textSize="18sp"
                            android:textStyle="normal"
                            android:textColor="@color/text"
                            android:layout_marginRight="10dp"
                            android:layout_alignParentRight="true"
                            />
                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <View android:clickable="false" android:layout_width="match_parent" android:layout_height="1px" android:background="@color/dividers"/>
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                >
                <LinearLayout
                    android:id="@+id/station_start_time_LinearLayout"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:background="@drawable/button_rect_list_normal"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="72dp"
                            android:layout_alignParentLeft="true"
                            android:gravity="center_vertical"
                            android:textColor="#000000"
                            android:text="开始时间"
                            android:textSize="16sp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_weight="5"
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:id="@+id/station_start_time"
                            android:layout_width="wrap_content"
                            android:layout_height="72dp"
                            android:layout_gravity="right"
                            android:textColor="#000000"
                            android:gravity="center_vertical"
                            android:textSize="14sp"/>
                        <ImageView
                            android:transitionName="fab"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/ic_keyboard_arrow_right_grey600_24dp"/>

                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <View android:clickable="false" android:layout_width="match_parent" android:layout_height="1px" android:background="@color/dividers"/>
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                >
                <LinearLayout
                    android:id="@+id/station_end_time_LinearLayout"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:background="@drawable/button_rect_list_normal"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="72dp"
                            android:layout_alignParentLeft="true"
                            android:gravity="center_vertical"
                            android:textColor="#000000"
                            android:text="结束时间"
                            android:textSize="16sp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_weight="5"
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:id="@+id/station_end_time"
                            android:layout_width="wrap_content"
                            android:layout_height="72dp"
                            android:layout_gravity="right"
                            android:textColor="#000000"
                            android:gravity="center_vertical"
                            android:textSize="14dp"/>
                        <ImageView
                            android:transitionName="fab"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/ic_keyboard_arrow_right_grey600_24dp"/>
                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <View android:clickable="false" android:layout_width="match_parent" android:layout_height="1px" android:background="@color/dividers"/>
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                >
                <LinearLayout
                    android:id="@+id/station_select_LinearLayout"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:background="@drawable/button_rect_list_normal"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:textColor="#000000"
                            android:text="变电站"
                            android:textSize="16sp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/station_select"
                        android:layout_weight="5"
                        android:layout_width="0dp"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:id="@+id/station_select_value"
                            android:layout_width="wrap_content"
                            android:layout_height="72dp"
                            android:layout_gravity="right"
                            android:gravity="center_vertical"
                            android:textColor="#000000"
                            android:text="全部"
                            android:textSize="14dp"/>

                        <TextView
                            android:id="@+id/station_select_id"
                            android:layout_width="wrap_content"
                            android:layout_height="72dp"
                            android:layout_gravity="right"
                            android:gravity="center_vertical"
                            android:textColor="#000000"
                            android:visibility="invisible"
                            android:textSize="14dp"/>
                        <ImageView
                            android:transitionName="fab"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/ic_keyboard_arrow_right_grey600_24dp"/>
                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <View android:clickable="false" android:layout_width="match_parent" android:layout_height="1px" android:background="@color/dividers"/>
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                >
                <LinearLayout
                    android:id="@+id/grade_select_LinearLayout"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:background="@drawable/button_rect_list_normal"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:textColor="#000000"
                            android:text="负责班组"
                            android:textSize="16sp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/grade_select"
                        android:layout_weight="5"
                        android:layout_width="0dp"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        >
                        <TextView
                            android:id="@+id/grade_select_value"
                            android:layout_width="wrap_content"
                            android:layout_height="72dp"
                            android:layout_gravity="right"
                            android:textColor="#000000"
                            android:gravity="center_vertical"
                            android:text="全部"
                            android:textSize="14dp"/>
                        <TextView
                            android:id="@+id/grade_select_id"
                            android:layout_width="wrap_content"
                            android:layout_height="72dp"
                            android:layout_gravity="right"
                            android:gravity="center_vertical"
                            android:textColor="#000000"
                            android:visibility="invisible"
                            android:textSize="14dp"/>
                        <ImageView
                            android:transitionName="fab"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/ic_keyboard_arrow_right_grey600_24dp"/>
                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <View android:clickable="false" android:layout_width="match_parent" android:layout_height="1px" android:background="@color/dividers"/>

    </LinearLayout>

    <LinearLayout

        android:divider="?android:attr/listDivider"
        android:showDividers="middle"
        android:id="@+id/child_menu"
        android:layout_width="@dimen/drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:paddingTop="0dp"
        android:background="@color/list_background_normal"
        android:clickable="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            >
            <ImageButton
                android:id="@+id/child_menu_back"
                android:transitionName="fab"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@drawable/ic_arrow_back_black_36dp"/>
            <TextView
                android:id="@+id/condition_name"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textColor="#000000"
                android:text="二级菜单名称"
                android:layout_height="72dp"
                android:textSize="18dp"/>
        </RelativeLayout>
        <View android:clickable="false" android:layout_width="match_parent" android:layout_height="1px" android:background="@color/dividers"/>
        <android.support.v7.widget.RecyclerView
            android:clipToPadding="false"
            android:id="@+id/select_condition"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
